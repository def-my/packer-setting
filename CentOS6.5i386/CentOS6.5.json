{
    "builders": [
        {
            "boot_command": [
                "<esc><wait>",
                "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg ",
                "<enter><wait>"
            ],
            "boot_wait": "30s",
            "guest_os_type": "RedHat",
            "http_directory": "./",
            "iso_checksum": "427309de36d518db9f72fc14d5d257df",
            "iso_checksum_type": "md5",
            "iso_url": "http://mozilla.ftp.iij.ad.jp/pub/linux/centos/6/isos/x86_64/CentOS-6.5-i386-netinstall.iso",
            "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
            "ssh_password": "vagrant",
            "ssh_username": "vagrant",
            "ssh_wait_timeout": "6000s",
            "type": "virtualbox-iso",
            "vm_name": "box"
        }
    ],
    "post-processors": [
        {
            "output": "./CentOS6.5.box",
            "type": "vagrant",
            "vagrantfile_template": "./Vagrantfile"
        }
    ],
    "provisioners": [
        {
            "script": "setup.sh",
            "type": "shell"
        }
    ]
}
