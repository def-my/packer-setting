{
    "builders": [
      {
        "boot_command": [
          "<esc><wait>",
          "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-desktop.cfg",
          "<enter><wait>"
        ],
        "boot_wait": "10s",
        "disk_size": "20000",
        "guest_os_type": "RedHat_64",
        "headless": "true",
        "http_directory": "./",
        "iso_checksum": "sha256:56f7b078a3b443095ba006cdc85319c691251cda98c5d73d12ef6db7aff6b4c1",
        "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/6.10/isos/x86_64/CentOS-6.10-x86_64-netinstall.iso",
        "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_pty": "true",
        "ssh_timeout": "10000s",
        "ssh_username": "vagrant",
        "type": "virtualbox-iso",
        "vboxmanage": [
          [
            "modifyvm",
            "{{.Name}}",
            "--memory",
            "512"
          ],
          [
            "modifyvm",
            "{{.Name}}",
            "--cpus",
            "1"
          ]
        ]
      },
      {
        "boot_command": [
          "<esc><wait>",
          "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-desktop.cfg",
          "<enter><wait>"
        ],
        "boot_wait": "10s",
        "disk_size": "20000",
        "guest_os_type": "linux",
        "headless": "true",
        "http_directory": "./",
        "iso_checksum": "sha256:56f7b078a3b443095ba006cdc85319c691251cda98c5d73d12ef6db7aff6b4c1",
        "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/6.10/isos/x86_64/CentOS-6.10-x86_64-netinstall.iso",
        "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_timeout": "10000s",
        "ssh_username": "vagrant",
        "type": "vmware-iso",
        "vmx_data": {
          "cpuid.coresPerSocket": "1",
          "memsize": "512",
          "numvcpus": "1"
        }
      }
    ],
    "post-processors": [
      {
        "override": {
          "virtualbox": {
            "output": "./centos6-x86_64-virtualbox_desktop.box"
          },
          "vmware": {
            "output": "./centos6-x86_64-vmware_desktop.box"
          }
        },
        "type": "vagrant"
      }
    ],
    "provisioners": [
      {
        "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'",
        "override": {
          "virtualbox-iso": {
            "scripts": [
              "scripts/base.sh",
              "scripts/vagrant.sh",
              "scripts/virtualbox.sh",
              "scripts/desktop.sh",
              "scripts/cleanup-desktop.sh",
              "scripts/zerodisk.sh"
            ]
          },
          "vmware-iso": {
            "scripts": [
              "scripts/base.sh",
              "scripts/vagrant.sh",
              "scripts/vmware.sh",
              "scripts/desktop.sh",
              "scripts/cleanup-desktop.sh",
              "scripts/zerodisk.sh"
            ]
          }
        },
        "type": "shell"
      }
    ]
  }
  