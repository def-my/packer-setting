{
  "builders": [
    {
      "boot_command": [
        "<tab>",
        "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-desktop.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "20000",
      "guest_os_type": "RedHat_64",
      "headless": "true",
      "http_directory": "./",
      "iso_checksum": "sha256:c67876a5602faa17f68b40ccf2628799b87454aa67700f0f57eec15c6ccdd98c",
      "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-boot.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_pty": "true",
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "boot_command": [
        "<tab>",
        "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-desktop.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "20000",
      "guest_os_type": "linux",
      "headless": "true",
      "http_directory": "./",
      "iso_checksum": "sha256:c67876a5602faa17f68b40ccf2628799b87454aa67700f0f57eec15c6ccdd98c",
      "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-boot.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "type": "vmware-iso",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "1"
      }
    }
  ],
  "post-processors": [
    {
      "override": {
        "virtualbox": {
          "output": "./centos8-x86_64-virtualbox_desktop.box"
        },
        "vmware": {
          "output": "./centos8-x86_64-vmware_desktop.box"
        }
      },
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/desktop.sh",
            "scripts/cleanup-desktop.sh",
            "scripts/zerodisk.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/vmware.sh",
            "scripts/desktop.sh",
            "scripts/cleanup-desktop.sh",
            "scripts/zerodisk.sh"
          ]
        }
      },
      "type": "shell"
    }
  ]
}
