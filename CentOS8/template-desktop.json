{
    "builders": [{
        "type": "virtualbox-iso",
        "boot_command": [
            "<tab>",
            "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-desktop.cfg",
            "<enter><wait>"
        ],
        "boot_wait": "10s",
        "disk_size": "20000",
        "guest_os_type": "RedHat_64",
        "headless": "true",
        "http_directory": "./",
        "iso_checksum": "a7993a0d4b7fef2433e0d4f53530b63c715d3aadbe91f152ee5c3621139a2cbc",
        "iso_checksum_type": "sha256",
        "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/8.0.1905/isos/x86_64/CentOS-8-x86_64-1905-boot.iso",
        "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_username": "vagrant",
        "ssh_wait_timeout": "10000s",
        "ssh_pty": "true",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ]
    }, {
        "type": "vmware-iso",
        "boot_command": [
            "<tab>",
            "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-desktop.cfg",
            "<enter><wait>"
        ],
        "boot_wait": "10s",
        "disk_size": "20000",
        "guest_os_type": "linux",
        "headless": "true",
        "http_directory": "./",
        "iso_checksum": "a7993a0d4b7fef2433e0d4f53530b63c715d3aadbe91f152ee5c3621139a2cbc",
        "iso_checksum_type": "sha256",
        "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/8.0.1905/isos/x86_64/CentOS-8-x86_64-1905-boot.iso",
        "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_username": "vagrant",
        "ssh_wait_timeout": "10000s",
        "vmx_data": {
            "memsize": "512",
            "numvcpus": "1",
            "cpuid.coresPerSocket": "1"
        }
    }],
    "post-processors": [{
        "override": {
            "virtualbox": {
                "output": "./centos8-x86_64-virtualbox_desktop.box"
            },
            "vmware": {
                "output": "./centos8-x86_64-vmware_desktop.box"
            }
        },
        "type": "vagrant"
    }],
    "provisioners": [{
        "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'",
        "override": {
            "virtualbox-iso": {
                "scripts": [
                    "scripts/base.sh",
                    "scripts/vagrant.sh",
                    "scripts/virtualbox.sh",
                    "scripts/desktop.sh",
                    "scripts/cleanup-desktop.sh",
                    "scripts/zerodisk.sh"
                ]
            },
            "vmware-iso": {
                "scripts": [
                    "scripts/base.sh",
                    "scripts/vagrant.sh",
                    "scripts/vmware.sh",
                    "scripts/desktop.sh",
                    "scripts/cleanup-desktop.sh",
                    "scripts/zerodisk.sh"
                ]
            }
        },
        "type": "shell"
    }]
}
