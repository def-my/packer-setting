{
  "builders":[{
    "type": "virtualbox",
    "guest_os_type": "RedHat_64",
    "iso_url": "http://download.fedoraproject.org/pub/fedora/linux/releases/19/Fedora/x86_64/iso/Fedora-19-x86_64-netinst.iso",
    "iso_checksum": "5c8cf418b5004c0b45d3d3895b280b4a",
    "iso_checksum_type": "md5",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "12000s",
    "vm_name": "box",
    "http_directory": "./",
    "boot_wait": "30s",
    "boot_command":[
      "<esc><wait>",
      "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg ",
      "<enter><wait>"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "./Fedora19.box",
    "vagrantfile_template": "./Vagrantfile"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "setup.sh"
  }]
}
