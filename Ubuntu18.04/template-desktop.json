      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "6000s",
      "ssh_username": "vagrant",
      "type": "vmware-iso",
      "vmx_data": {
        "cpuid.coresPerSocket": "2",
        "memsize": "2048",
        "numvcpus": "2"
